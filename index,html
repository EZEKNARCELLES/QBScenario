                    <div class="choice" onclick="selectChoice(4, 'cash-flow')">
                        <div class="choice-icon">üí∏</div>
                        <div class="choice-content">
                            <div class="choice-title">Statement of Cash Flows</div>
                            <div class="choice-desc">Shows cash movement in/out of business</div>
                        </div>
                    </div>
                </div>
                <div class="feedback">
                    <div class="feedback-icon"></div>
                    <div class="feedback-content">
                        <div class="feedback-title"></div>
                        <div class="feedback-text"></div>
                    </div>
                </div>
                <div class="button-container">
                    <button class="btn btn-primary" id="nextBtn4" onclick="nextStep(4)" disabled>
                        Complete Day ‚Üí
                    </button>
                </div>
            </div>
        </div>

        <!-- Completion Screen -->
        <div class="scenario-content" id="completion">
            <div class="completion-screen">
                <div class="completion-icon">üéâ</div>
                <h2>Outstanding Work!</h2>
                <p class="completion-message">
                    Congratulations! You've successfully completed a full bookkeeping workflow in QuickBooks Desktop. You handled every transaction correctly and demonstrated excellent understanding of QuickBooks fundamentals.
                </p>
                <div class="summary-box">
                    <div class="summary-title">üìã Today's Completed Tasks</div>
                    <div class="summary-items">
                        <div class="summary-item">
                            <div class="summary-item-number">1</div>
                            <div class="summary-item-text">
                                <div class="summary-item-label">9:30 AM - Customer Sale</div>
                                <div class="summary-item-action">Created Invoice for Martinez Construction</div>
                            </div>
                        </div>
                        <div class="summary-item">
                            <div class="summary-item-number">2</div>
                            <div class="summary-item-text">
                                <div class="summary-item-label">11:00 AM - Vendor Bill</div>
                                <div class="summary-item-action">Entered Bill from ABC Office Supplies</div>
                            </div>
                        </div>
                        <div class="summary-item">
                            <div class="summary-item-number">3</div>
                            <div class="summary-item-text">
                                <div class="summary-item-label">2:00 PM - Customer Payment</div>
                                <div class="summary-item-action">Received Payment from Johnson Electronics</div>
                            </div>
                        </div>
                        <div class="summary-item">
                            <div class="summary-item-number">4</div>
                            <div class="summary-item-text">
                                <div class="summary-item-label">4:30 PM - Management Request</div>
                                <div class="summary-item-action">Generated Profit & Loss Report</div>
                            </div>
                        </div>
                    </div>
                </div>
                <p class="completion-message">
                    You've demonstrated that you understand when to use different transaction types and reports in QuickBooks Desktop. These are essential skills for any successful bookkeeper!
                </p>
                <div class="button-container">
                    <button class="btn btn-primary" onclick="restartScenario()">
                        üîÑ Start Another Day
                    </button>
                </div>
            </div>
        </div>
    </div>

    <script>
        let currentStep = 0;
        const totalSteps = 4;
        let decisions = [];

        const scenarioData = {
            1: {
                correct: 'invoice',
                correctFeedback: {
                    title: 'Perfect Choice!',
                    text: 'You correctly created an Invoice. Since the customer will pay in 30 days (not immediately), an invoice is the right transaction type. This records the sale and creates an account receivable.'
                },
                incorrectFeedback: {
                    title: 'Not Quite',
                    text: 'The correct answer is Invoice. A Sales Receipt is for immediate payment, an Estimate is just a quote, and a Bill is for money you owe vendors. Since payment is due in 30 days, use an Invoice to record the sale and account receivable.'
                }
            },
            2: {
                correct: 'enter-bill',
                correctFeedback: {
                    title: 'Excellent!',
                    text: 'You correctly chose to Enter Bill. Since you received the supplies and have a bill with payment due later, entering the bill records what you owe (accounts payable) and tracks it until you pay.'
                },
                incorrectFeedback: {
                    title: 'Not Quite',
                    text: 'The correct answer is Enter Bill. A Purchase Order is for ordering (not receiving), Write Check is for immediate payment, and Invoice is for customer sales. Since you received goods with payment due later, enter the bill to record accounts payable.'
                }
            },
            3: {
                correct: 'receive-payment',
                correctFeedback: {
                    title: 'Great Job!',
                    text: 'You correctly chose Receive Payment. This applies the check to the existing invoice, reduces accounts receivable, and properly tracks the payment against Invoice #1047.'
                },
                incorrectFeedback: {
                    title: 'Not Quite',
                    text: 'The correct answer is Receive Payment. Sales Receipt is for new sales, Deposit doesn\'t link to the invoice, and Credit Memo is for returns/refunds. Since this pays an existing invoice, use Receive Payment to properly apply it.'
                }
            },
            4: {
                correct: 'profit-loss',
                correctFeedback: {
                    title: 'Perfect!',
                    text: 'You correctly selected the Profit & Loss Report. This report shows total revenue, all expenses, and calculates net profit/loss over a period‚Äîexactly what your manager needs for the board meeting.'
                },
                incorrectFeedback: {
                    title: 'Not Quite',
                    text: 'The correct answer is Profit & Loss Report. The Balance Sheet shows financial position, not performance. A/R Aging shows unpaid invoices, and Cash Flow shows cash movement. For revenue, expenses, and profit, always use Profit & Loss.'
                }
            }
        };

        function startScenario() {
            document.getElementById('intro').classList.remove('active');
            document.getElementById('step1').classList.add('active');
            currentStep = 1;
            updateProgress();
        }

        function selectChoice(step, choice) {
            const stepData = scenarioData[step];
            const isCorrect = choice === stepData.correct;
            
            // Disable all choices
            const choices = document.querySelectorAll(`#step${step} .choice`);
            choices.forEach(c => {
                c.classList.add('disabled');
                if (c.getAttribute('onclick').includes(choice)) {
                    c.classList.add(isCorrect ? 'correct' : 'incorrect');
                    if (isCorrect) {
                        c.querySelector('.choice-icon').textContent = '‚úì';
                    } else {
                        c.querySelector('.choice-icon').textContent = '‚úó';
                    }
                }
                // Show correct answer if user chose wrong
                if (!isCorrect && c.getAttribute('onclick').includes(stepData.correct)) {
                    c.classList.add('correct');
                    c.querySelector('.choice-icon').textContent = '‚úì';
                }
            });

            // Show feedback
            const feedback = document.querySelector(`#step${step} .feedback`);
            const feedbackData = isCorrect ? stepData.correctFeedback : stepData.incorrectFeedback;
            
            feedback.classList.add('show', isCorrect ? 'correct' : 'incorrect');
            feedback.querySelector('.feedback-icon').textContent = isCorrect ? '‚úÖ' : '‚ùå';
            feedback.querySelector('.feedback-title').textContent = feedbackData.title;
            feedback.querySelector('.feedback-text').textContent = feedbackData.text;

            // Enable next button
            document.getElementById(`nextBtn${step}`).disabled = false;

            // Store decision
            decisions[step - 1] = { step, choice, isCorrect };
        }

        function nextStep(step) {
            document.getElementById(`step${step}`).classList.remove('active');
            
            if (step < totalSteps) {
                currentStep = step + 1;
                document.getElementById(`step${currentStep}`).classList.add('active');
                updateProgress();
            } else {
                showCompletion();
            }
        }

        function updateProgress() {
            // Update step indicators
            document.querySelectorAll('.progress-step').forEach((step, index) => {
                if (index < currentStep) {
                    step.classList.add('completed');
                    step.classList.remove('active');
                } else if (index === currentStep) {
                    step.classList.add('active');
                    step.classList.remove('completed');
                } else {
                    step.classList.remove('active', 'completed');
                }
            });

            // Update progress bar
            const progress = (currentStep / 5) * 100;
            document.getElementById('progressFill').style.width = progress + '%';
        }

        function showCompletion() {
            document.getElementById('completion').classList.add('active');
            currentStep = 5;
            updateProgress();
        }

        function restartScenario() {
            // Reset all variables
            currentStep = 0;
            decisions = [];

            // Reset all steps
            document.querySelectorAll('.scenario-content').forEach(content => {
                content.classList.remove('active');
            });

            // Reset all choices
            document.querySelectorAll('.choice').forEach(choice => {
                choice.classList.remove('selected', 'correct', 'incorrect', 'disabled');
                const icon = choice.querySelector('.choice-icon');
                const onclick = choice.getAttribute('onclick');
                if (onclick.includes('invoice')) icon.textContent = 'üìÑ';
                else if (onclick.includes('sales-receipt')) icon.textContent = 'üßæ';
                else if (onclick.includes('estimate')) icon.textContent = 'üìã';
                else if (onclick.includes('bill')) icon.textContent = 'üí≥';
                else if (onclick.includes('purchase-order')) icon.textContent = 'üìù';
                else if (onclick.includes('enter-bill')) icon.textContent = 'üìë';
                else if (onclick.includes('write-check')) icon.textContent = '‚úçÔ∏è';
                else if (onclick.includes('receive-payment')) icon.textContent = 'üíµ';
                else if (onclick.includes('deposit')) icon.textContent = 'üè¶';
                else if (onclick.includes('credit-memo')) icon.textContent = 'üìã';
                else if (onclick.includes('balance-sheet')) icon.textContent = '‚öñÔ∏è';
                else if (onclick.includes('ar-aging')) icon.textContent = 'üìä';
                else if (onclick.includes('profit-loss')) icon.textContent = 'üìà';
                else if (onclick.includes('cash-flow')) icon.textContent = 'üí∏';
            });

            // Hide all feedback
            document.querySelectorAll('.feedback').forEach(fb => {
                fb.classList.remove('show', 'correct', 'incorrect');
            });

            // Disable all next buttons
            for (let i = 1; i <= totalSteps; i++) {
                document.getElementById(`nextBtn${i}`).disabled = true;
            }

            // Show intro
            document.getElementById('intro').classList.add('active');
            
            // Reset progress
            updateProgress();
        }
    </script>
</body>
</html>
